@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p class="mb-0 font-weight-bold text-warning">
        Deleting this data will permanently remove your account, and this cannot be recovered.
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.SecurityPhrase" class="mb-0"></label><br/>
            <label class="mb-0 small">Note: Please provide your registerd email id as a security phrase.</label>
            <input asp-for="Input.SecurityPhrase" class="form-control" />
            <span asp-validation-for="Input.SecurityPhrase" class="text-danger"></span>
        </div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Delete data and close my account</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}