@model IEnumerable<ITMatching.Models.FAQ>

@{
    ViewData["Title"] = "FAQ Page";
}

<br />

<div class="container justify-content-center">
    <div class="row justify-content-center">
        <div class="col-md-12 justify-content-center mt-5 mb-5 text-center">
            <h1 class="display-4"><strong>Frequently Asked Questions</strong></h1>
        </div>

        <br />

        <div class="accordion col-md-10 justify-content-center mb-5" id="accordionQuestion">
            @{ var i = 1;}
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-header faq-header" id="@($"question{i}")">
                        <h2 class="mb-0">
                            <button class="btn btn-link btn-block text-white text-left collapsed" type="button" data-toggle="collapse" data-target="#@($"collapse{i}")" aria-expanded="false" aria-controls="@($"collapse{i}")">
                                @Html.DisplayFor(modelItem => item.Question)
                            </button>
                        </h2>
                    </div>
                    <div id="@($"collapse{i}")" class="collapse" aria-labelledby="@($"question{i}")" data-parent="#accordionQuestion">
                        <div class="card-body faq-body">
                            @Html.DisplayFor(modelItem => item.Answer)
                        </div>
                    </div>
                </div>
                i++;
            }
        </div>
    </div>
</div>