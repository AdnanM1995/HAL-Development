@model ITMatching.ViewModels.RequestFormViewModel

@{
    ViewData["Title"] = "Request Form";
}
<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="border-2">
                <div class="input-area">
                    <form asp-controller="Matching" asp-action="HelpRequest" method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="HelpRequest.RequestTitle">Give the request a title:<br></label>
                            <textarea class="form-control" asp-for="HelpRequest.RequestTitle" rows="1"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="HelpRequest.RequestDescription">Please describe your IT Issue in detail:<br></label>
                            <textarea class="form-control" asp-for="HelpRequest.RequestDescription" rows="3" maxlength="2000"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="tags">Select any tags that apply:</label>
                            <div class="card card-body">
                                @foreach (Service s in Model.Services)
                            {
                                 if (s.ServiceCategory == "OS" && s.ServiceName != "OS")
                                 {
                                <input type="checkbox" name="TagIds" value="@s.Id">@s.ServiceName
                                 }
                            }
                            </div>
                            <div class="card card-body">
                                @foreach (Service s in Model.Services)
                            {
                                 if (s.ServiceCategory == "Hardware" && s.ServiceName != "Hardware")
                                 {
                                <input type="checkbox" name="TagIds" value="@s.Id">@s.ServiceName
                                 }
                            }
                            </div>
                            <div class="card card-body">
                                @foreach (Service s in Model.Services)
                            {
                                 if (s.ServiceCategory == "Software" && s.ServiceName != "Software")
                                 {
                                <input type="checkbox" name="TagIds" value="@s.Id">@s.ServiceName
                                 }
                            }
                            </div>
                            <div class="card card-body">
                                @foreach (Service s in Model.Services)
                            {
                                 if (s.ServiceCategory == "Network" && s.ServiceName != "Network")
                                 {
                                <input type="checkbox" name="TagIds" value="@s.Id">@s.ServiceName
                                 }
                            }
                            </div>
                            <div class="card card-body">
                                @foreach (Service s in Model.Services)
                            {
                                 if (s.ServiceCategory == "CommunicationMethod" && s.ServiceName != "CommunicationMethod")
                                 {
                                <input type="checkbox" name="TagIds" value="@s.Id">@s.ServiceName
                                 }
                            }
                            </div>
                        </div>
                        <div class="input-center">
                            <button type="submit" class="btn btn-secondary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>