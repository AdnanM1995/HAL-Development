@model ITMatching.ViewModels.RequestFormViewModel

@{
    ViewData["Title"] = "Request Form";
}
<script src="~/js/request-form.js" asp-append-version="true"></script>
<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="border-2">
                <div class="input-area">
                    <form asp-controller="Matching" asp-action="HelpRequest" method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="HelpRequest.RequestTitle">Give the request a title:<br></label>
                            <textarea class="form-control" asp-for="HelpRequest.RequestTitle" rows="1"></textarea>
                        </div>
                        <div class="form-group">
                            <label asp-for="HelpRequest.RequestDescription">Please describe your IT Issue in detail:<br></label>
                            <textarea class="form-control" asp-for="HelpRequest.RequestDescription" rows="3" maxlength="2000"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="tags">Select any tags that apply:</label>
                            <div class="card card-body">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12">
                                            <ul class="formTags">
                                                @foreach (Service s in Model.Services)
                                                {
                                                    if (s.ServiceCategory == "OS" && s.ServiceName != "OS")
                                                    {
                                                        <li>
                                                            <label>
                                                                <input type="checkbox" />
                                                                <span>@s.ServiceName </span>
                                                            </label>
                                                        </li>

                                                    }
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card card-body">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12">
                                            <ul class="formTags">
                                                @foreach (Service s in Model.Services)
                                                {
                                                    if (s.ServiceCategory == "Hardware" && s.ServiceName != "Hardware")
                                                    {
                                                        <li>
                                                            <label>
                                                                <input type="checkbox" />
                                                                <span>@s.ServiceName </span>
                                                            </label>
                                                        </li>

                                                    }
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card card-body">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12">
                                            <ul class="formTags">
                                                @foreach (Service s in Model.Services)
                                                {
                                                    if (s.ServiceCategory == "Software" && s.ServiceName != "Software")
                                                    {
                                                        <li>
                                                            <label>
                                                                <input type="checkbox" />
                                                                <span>@s.ServiceName </span>
                                                            </label>
                                                        </li>

                                                    }
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card card-body">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12">
                                            <ul class="formTags">
                                                @foreach (Service s in Model.Services)
                                                {
                                                    if (s.ServiceCategory == "Network" && s.ServiceName != "Network")
                                                    {
                                                        <li>
                                                            <label>
                                                                <input type="checkbox" />
                                                                <span>@s.ServiceName </span>
                                                            </label>
                                                        </li>

                                                    }
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card card-body">
                                <div class="list-unstyled card-columns">
                                    @foreach (Service s in Model.Services)
                                    {
                                        if (s.ServiceCategory == "CommunicationMethod" && s.ServiceName != "CommunicationMethod")
                                        {
                                            <input type="checkbox" class="cbox" name="TagIds" value="@s.Id">@s.ServiceName
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                            <div class="input-center">
                                <input type="submit" class="btn btn-secondary" id="formSubmitButton" value="Submit">
                             </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>