@model IEnumerable<Expeditions.Models.Expedition>

@{
    ViewData["Title"] = "Recent";
}

<h1>Recent Expenditions</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Season)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Peak)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TerminationReason)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="btn-outline-primary" onclick="location.href = '@(Url.Action("Details", "Home", new { id = item.Id }))'"> 
            <td>
                @Html.DisplayFor(modelItem => item.Season)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peak.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TerminationReason)
            </td>
        </tr>
}
    </tbody>
</table>
